/* pages/topList/topList.wxss */

.topList {
  width: 100%;
  height: 750rpx;
}

.topListitem {
  height: 90%;
  display: flex;
  align-items: center;
}

.topListitem_center {
  padding: 20rpx;
  width: 95%;
  height: 95%;
  box-sizing: border-box;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0px 0px 2px 0px rgba(0, 0, 0, 0.1);
  margin: 0 auto;
  border: 1px solid #f2f2f2;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
}

.topListimg {
   height: 555rpx; 
  width: 100%;
}
.topNum{
  font-size: 32rpx;
  text-align: center;
  /* margin-top: 20rpx; */
}
.name{
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  /* margin-top: 60rpx; */
}
.smallName{
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
  text-align: center;
   margin-top: 10rpx; 
}
.bofang{
  text-align: center;
  height: 160rpx;
}
.bofang view{
  font-size: 80rpx;
